<%= form_with(model: user, class: "user-role-form") do |form| %>
  <% if user.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h4>
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="user-info-display">
    <div class="user-details">
      <h3><%= user.first_name %> <%= user.last_name %></h3>
      <p class="user-email"><%= user.email %></p>
    </div>
    <% if user.google_avatar_url.present? %>
      <div class="user-avatar">
        <img src="<%= user.google_avatar_url %>" alt="<%= user.first_name %>'s avatar">
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :role, "User Role", class: "form-label" %>
    <% is_own_account = admin_signed_in? && user.google_uid == current_admin.uid %>
    <%= form.select :role,
        options_for_select([
          ['User', 'user'],
          ['Admin', 'admin'],
          ['Sponsor', 'sponsor']
        ], user.role),
        { prompt: 'Select a role' },
        { class: "form-select", disabled: is_own_account } %>
    <% if is_own_account %>
      <small class="form-text text-warning">You cannot change your own role.</small>
    <% else %>
      <small class="form-text">Choose the user's access level for the application.</small>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :organizational_role_id, "Organizational Role", class: "form-label" %>
    <%= form.select :organizational_role_id,
        options_for_select(OrganizationalRole.all.map { |r| [r.name, r.id] }, user.organizational_role_id),
        { prompt: 'Select an organizational role', include_blank: true },
        { class: "form-select" } %>
    <small class="form-text">Choose the user's organizational team or role.</small>
  </div>

  <div class="form-actions">
    <%= form.submit "Update Role", class: "btn btn-primary" %>
  </div>
<% end %>
