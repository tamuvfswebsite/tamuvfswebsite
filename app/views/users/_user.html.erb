<div id="<%= dom_id user %>">
  <% if user.google_avatar_url.present? %>
    <p>
      <img src="<%= user.google_avatar_url %>" alt="<%= user.first_name %>'s avatar" style="width: 50px; height: 50px; border-radius: 50%;">
    </p>
  <% end %>

  <p>
    <strong>First name:</strong>
    <%= user.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= user.last_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>Role:</strong>
    <%= user.role %>
  </p>

  <p>
    <strong>Google uid:</strong>
    <%= user.google_uid %>
  </p>

  <p>
    <strong>Google avatar url:</strong>
    <%= user.google_avatar_url %>
  </p>

</div>
