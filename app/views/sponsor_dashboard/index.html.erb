<h1>Welcome, Sponsor</h1>

<p>Welcome to your Sponsor Dashboard. Quick links and current logos are shown below.</p>

<ul>
    <li><%= link_to 'View student resumes', '/resumes' %></li>
    <li><%= link_to 'Manage your logos', '/sponsor_logos' %></li>
</ul>

<h2>Your logos</h2>

<% if defined?(@logos) && @logos.present? %>
    <div class="sponsor-logos">
        <% @logos.each do |logo| %>
            <div class="sponsor-logo" style="display:inline-block; margin:8px; text-align:center;">
                <% if logo.respond_to?(:image_url) && logo.image_url.present? %>
                    <%= image_tag logo.image_url, alt: (logo.respond_to?(:name) ? logo.name : 'sponsor logo'), style: 'max-height:100px; max-width:200px; display:block;' %>
                <% elsif logo.respond_to?(:image) && logo.image.attached? %>
                    <%= image_tag url_for(logo.image), alt: (logo.respond_to?(:name) ? logo.name : 'sponsor logo'), style: 'max-height:100px; max-width:200px; display:block;' %>
                <% else %>
                    <div style="width:200px; height:100px; border:1px solid #ccc; display:flex; align-items:center; justify-content:center;">
                        No image
                    </div>
                <% end %>
                <small><%= logo.name if logo.respond_to?(:name) %></small>
            </div>
        <% end %>
    </div>
<% else %>
    <p>No logos uploaded yet. <%= link_to 'Upload a logo', '/sponsor_logos/new' %></p>
<% end %>
