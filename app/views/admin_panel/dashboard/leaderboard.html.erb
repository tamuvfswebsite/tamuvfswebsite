<div class="admin-leaderboard-page">
  <div class="page-header">
    <h1>Attendance Leaderboard</h1>
  </div>

  <% if @leaders.any? %>
    <div class="leaderboard-table-container">
      <table class="leaderboard-table">
        <thead>
          <tr>
            <th class="rank-column">#</th>
            <th>Name</th>
            <th>Email</th>
            <th class="points-column">Points</th>
          </tr>
        </thead>
        <tbody>
          <% @leaders.each_with_index do |user, idx| %>
            <tr class="<%= 'top-three' if idx < 3 %>">
              <td class="rank-cell rank-<%= idx + 1 %>">
                <span class="rank-number"><%= idx + 1 %></span>
              </td>
              <td class="name-cell"><%= [user.first_name, user.last_name].compact.join(' ') %></td>
              <td class="email-cell"><%= user.email %></td>
              <td class="points-cell"><%= user.points %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="empty-state">
      <p>No users yet.</p>
    </div>
  <% end %>

  <div class="page-footer">
    <%= link_to 'Back to Admin Dashboard', admin_panel_root_path, class: 'btn btn-outline' %>
    <%= link_to 'Manage Events', admin_panel_events_path, class: 'btn btn-primary' %>
  </div>
</div>
