<%= form_with(model: [:admin_panel, event], local: true) do |form| %>
  <% if event.errors.any? %>
    <div class="error-messages">
      <h4><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h4>
      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, "Event Title" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description, "Event Description" %>
    <%= form.text_area :description, rows: 4 %>
  </div>

  <div class="field">
    <%= form.label :event_date, "Event Date & Time" %>
    <%= form.datetime_local_field :event_date %>
  </div>

  <div class="field">
    <%= form.label :location, "Event Location" %>
    <%= form.text_field :location %>
  </div>

  <div class="field">
    <%= form.label :capacity, "Maximum Capacity" %>
    <%= form.number_field :capacity, min: 1 %>
  </div>

  <div class="field">
    <%= form.label :attendance_points, "Attendance Points" %>
    <%= form.number_field :attendance_points, min: 0, step: 1 %>
  </div>

  <div class="field">
    <%= form.label :is_public, "Make this event public (visible to everyone)" %>
    <%= form.check_box :is_public %>
    <small class="form-text text-muted">Public events are visible to everyone, regardless of organizational role or sign-in status.</small>
  </div>

  <div class="field">
    <%= form.label :organizational_role_ids, "Target Organizational Roles" %>
    <small class="form-text text-muted">Select specific roles this event is for. Leave empty if event is for all roles (or if marked as Public above).</small>
    <%= form.collection_check_boxes :organizational_role_ids, OrganizationalRole.all.order(:name), :id, :name do |b| %>
      <div class="form-check">
        <%= b.check_box class: "form-check-input" %>
        <%= b.label class: "form-check-label" %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>