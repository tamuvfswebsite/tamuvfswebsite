<div class="admin-events-page">
  <div class="page-header">
    <h1>Event Management</h1>
    <div class="header-actions">
      <%= link_to "Create New Event", new_admin_panel_event_path, class: "btn btn-primary" %>
      <%= link_to "Create Attendance Link", new_admin_panel_attendance_link_path, class: "btn btn-outline" %>
    </div>
  </div>

  <div class="events-section">
    <h2>Upcoming Events</h2>
    <% if @upcoming_events.any? %>
      <div class="events-table-container">
        <table class="events-table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Date</th>
              <th>Location</th>
              <th>Attendance Points</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @upcoming_events.each do |event| %>
              <tr>
                <td class="event-title"><%= event.title %></td>
                <td><%= event.formatted_date %></td>
                <td><%= event.location %></td>
                <td class="text-center"><%= event.respond_to?(:attendance_points) ? event.attendance_points : 1 %></td>
                <td class="actions-cell">
                  <%= button_to "View", admin_panel_event_path(event), method: :get, class: "btn btn-sm btn-outline", form: { style: 'display: inline;' } %>
                  <%= button_to "Edit", edit_admin_panel_event_path(event), method: :get, class: "btn btn-sm btn-primary", form: { style: 'display: inline;' } %>
                  <%= button_to 'Delete', admin_panel_event_path(event), method: :delete, class: "btn btn-sm btn-danger", form: { style: 'display: inline;', data: { turbo_confirm: "Are you sure you want to delete this event?" } } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="empty-state">
        <p>No upcoming events scheduled.</p>
      </div>
    <% end %>
  </div>

  <div class="events-section">
    <h2>Past Events</h2>
    <% if @past_events.any? %>
      <div class="events-table-container">
        <table class="events-table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Date</th>
              <th>Location</th>
              <th>Attendance Points</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @past_events.limit(10).each do |event| %>
              <tr>
                <td class="event-title"><%= event.title %></td>
                <td><%= event.formatted_date %></td>
                <td><%= event.location %></td>
                <td class="text-center"><%= event.respond_to?(:attendance_points) ? event.attendance_points : 1 %></td>
                <td class="actions-cell">
                  <%= button_to "View", admin_panel_event_path(event), method: :get, class: "btn btn-sm btn-outline", form: { style: 'display: inline;' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="empty-state">
        <p>No past events found.</p>
      </div>
    <% end %>
  </div>

  <div class="page-footer">
    <%= link_to 'Back to Admin Dashboard', admin_panel_root_path, class: "btn btn-outline" %>
  </div>
</div>