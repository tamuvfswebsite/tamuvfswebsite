<div class="admin-sponsor-show-page">
  <div class="page-header">
    <h1><%= @sponsor.company_name %></h1>
    <div class="header-actions">
      <%= button_to 'Edit Sponsor', edit_admin_panel_sponsor_path(@sponsor), method: :get, class: 'btn btn-primary', form: { style: 'display: inline;' } %>
      <%= button_to "Assign Users", assign_users_admin_panel_sponsor_path(@sponsor), method: :get, class: 'btn btn-primary', form: { style: 'display: inline;' } %>
    </div>
  </div>

  <!-- Logo Display Card -->
  <% if @sponsor.logo.attached? %>
    <div class="logo-card">
      <h2>Company Logo</h2>
      <div class="logo-display">
        <%= image_tag @sponsor.logo, alt: "#{@sponsor.company_name} logo", class: "sponsor-logo" %>
      </div>
    </div>
  <% end %>

  <!-- Sponsor Details Card -->
  <div class="details-card">
    <h2>Sponsor Information</h2>
    <div class="detail-grid">
      <div class="detail-item">
        <span class="detail-label">Tier</span>
        <span class="tier-badge tier-<%= @sponsor.tier&.downcase %>"><%= @sponsor.tier %></span>
      </div>

      <div class="detail-item">
        <span class="detail-label">Resume Access</span>
        <span class="detail-value <%= @sponsor.resume_access? ? 'access-yes' : 'access-no' %>">
          <%= @sponsor.resume_access? ? "Yes" : "No" %>
        </span>
      </div>

      <div class="detail-item full-width">
        <span class="detail-label">Website</span>
        <span class="detail-value">
          <% if @sponsor.website.present? %>
            <a href="<%= @sponsor.website %>" target="_blank" rel="noopener"><%= @sponsor.website %></a>
          <% else %>
            <span class="empty-value">Not provided</span>
          <% end %>
        </span>
      </div>

      <div class="detail-item">
        <span class="detail-label">Contact Email</span>
        <span class="detail-value">
          <% if @sponsor.contact_email.present? %>
            <a href="mailto:<%= @sponsor.contact_email %>"><%= @sponsor.contact_email %></a>
          <% else %>
            <span class="empty-value">Not provided</span>
          <% end %>
        </span>
      </div>

      <div class="detail-item">
        <span class="detail-label">Phone Number</span>
        <span class="detail-value">
          <%= @sponsor.phone_number.present? ? @sponsor.phone_number : content_tag(:span, 'Not provided', class: 'empty-value') %>
        </span>
      </div>

      <div class="detail-item full-width">
        <span class="detail-label">Description</span>
        <p class="detail-text">
          <%= @sponsor.company_description.present? ? @sponsor.company_description : content_tag(:span, 'No description provided', class: 'empty-value') %>
        </p>
      </div>
    </div>
  </div>

  <!-- Logo Placements Card -->
  <div class="placements-card">
    <div class="placements-header">
      <h2>Logo Placements</h2>
      <%= button_to "Add Logo Placement", new_admin_panel_sponsor_logo_placement_path(@sponsor), method: :get, class: "btn btn-primary", form: { style: 'display: inline;' } %>
    </div>

    <% if @sponsor.logo_placements.any? %>
      <div class="placements-list">
        <% @sponsor.logo_placements.each do |placement| %>
          <div class="placement-item">
            <div class="placement-info">
              <span class="placement-page"><%= placement.page_name.titleize %></span>
              <span class="placement-separator">â€”</span>
              <span class="placement-section"><%= placement.section %></span>
            </div>
            <div class="placement-actions">
              <%= button_to "Edit", edit_admin_panel_sponsor_logo_placement_path(@sponsor, placement), method: :get, class: "btn btn-outline", form: { style: 'display: inline;' } %>
              <%= button_to "Delete", admin_panel_sponsor_logo_placement_path(@sponsor, placement),
                  method: :delete,
                  class: "btn btn-danger",
                  data: { turbo_confirm: "Are you sure?" },
                  form: { style: 'display: inline;' } %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="empty-placements">
        <p>No logo placements configured for this sponsor.</p>
      </div>
    <% end %>
  </div>

  <div class="page-footer">
    <% unless @sponsor.default_sponsor? %>
      <%= button_to 'Delete Sponsor', admin_panel_sponsor_path(@sponsor),
                  method: :delete,
                  class: 'btn btn-danger',
                  data: { turbo_confirm: "Are you sure? All users assigned to this sponsor will be moved to the default sponsor." },
                  form: { style: 'display: inline;' } %>
    <% end %>
    <%= button_to 'Back to Sponsors', admin_panel_sponsors_path, method: :get, class: 'btn btn-outline', form: { style: 'display: inline;' } %>
  </div>
</div>