<h1><%= @sponsor.company_name %></h1>

<div class="sponsor-details">
  <p><strong>Website:</strong> <%= @sponsor.website %></p>
  <p><strong>Tier:</strong> <%= @sponsor.tier %></p>
  <p><strong>Contact Email:</strong> <%= @sponsor.contact_email %></p>
  <p><strong>Phone Number:</strong> <%= @sponsor.phone_number %></p>
  <p><strong>Description:</strong> <%= @sponsor.company_description %></p>
  <p><strong>Resume Access:</strong> <%= @sponsor.resume_access? ? "Yes" : "No" %></p>

  <p>Logo Placements</p>
  <%= link_to "Add Logo Placement", new_admin_panel_sponsor_logo_placement_path(@sponsor) %>

  <ul>
    <% @sponsor.logo_placements.each do |placement| %>
      <li>
        <%= placement.page_name.titleize %> - <%= placement.section %>
        <%= link_to "Edit", edit_admin_panel_sponsor_logo_placement_path(@sponsor, placement) %>
        <%= link_to "Delete", admin_panel_sponsor_logo_placement_path(@sponsor, placement),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </li>
    <% end %>
  </ul>
</div>

<div class="actions" style="display: flex; gap: 10px;">
  <%= button_to 'Edit Sponsor', edit_admin_panel_sponsor_path(@sponsor), method: :get, class: 'btn btn-primary', style: 'height: 48px; padding: 12px 32px; box-sizing: border-box; font-weight: 500; font-size: 16px; line-height: 1.2;', form: { style: 'display: inline; margin: 0; vertical-align: top;' } %>
  <%= button_to "Assign Users", assign_users_admin_panel_sponsor_path(@sponsor), method: :get, class: 'btn btn-primary', style: 'height: 48px; padding: 12px 32px; box-sizing: border-box; font-weight: 500; font-size: 16px; line-height: 1.2;', form: { style: 'display: inline; margin: 0; vertical-align: top;' } %>
  <%= button_to 'Delete Sponsor', admin_panel_sponsor_path(@sponsor),
              method: :delete,
              class: 'btn btn-danger',
              style: 'height: 48px; padding: 12px 32px; box-sizing: border-box; font-weight: 500; font-size: 16px; line-height: 1.2;',
              data: { confirm: "Are you sure you want to delete this sponsor?" },
              form: { style: 'display: inline; margin: 0; vertical-align: top;' } %>
  <%= button_to 'Back to Sponsors', admin_panel_sponsors_path, method: :get, class: 'btn btn-outline', style: 'height: 48px; padding: 12px 32px; box-sizing: border-box; font-weight: 500; font-size: 16px; line-height: 1.2;', form: { style: 'display: inline; margin: 0; vertical-align: top;' } %>
</div>