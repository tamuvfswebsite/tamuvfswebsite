<h1>Edit Sponsor</h1>

<%= render 'form', sponsor: @sponsor %>

<div class="navigation" style="display: flex; gap: 10px; margin-top: var(--space-md);">
  <%= button_to 'Show Sponsor', admin_panel_sponsor_path(@sponsor), method: :get, class: 'btn btn-outline', style: 'height: 48px; padding: 12px 32px; box-sizing: border-box; font-weight: 500; font-size: 16px; line-height: 1.2;', form: { style: 'display: inline; margin: 0; vertical-align: top;' } %>
  <%= button_to 'Back to Sponsors', admin_panel_sponsors_path, method: :get, class: 'btn btn-outline', style: 'height: 48px; padding: 12px 32px; box-sizing: border-box; font-weight: 500; font-size: 16px; line-height: 1.2;', form: { style: 'display: inline; margin: 0; vertical-align: top;' } %>
</div>