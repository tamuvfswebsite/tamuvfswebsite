<% content_for :title, "Texas A&M Vertical Flight Society" %>

<div class="landing-page">
  <div class="landing-content">
    <div class="left">
      <div class="brand">Texas A&M â€¢ Vertical Flight Society</div>
      <h1 class="headline">Welcome to the Vertical Flight Society</h1>
      <p class="subhead">Advancing rotorcraft and VTOL innovation at Texas A&M University.</p>
    </div>

    <div class="right">
      <%= image_tag 'vfs-bird-logo.png', alt: 'Vertical Flight Society Logo', class: 'landing-logo' %>
    </div>
  </div>
</div>

<div class="home-events-section">
  <div class="home-events-header">
    <h2>Upcoming Events</h2>
  </div>

  <% if @upcoming_events.present? %>
    <div class="home-events-grid">
      <% @upcoming_events.limit(3).each do |event| %>
        <% if admin_signed_in? %>
          <%= link_to event, class: 'home-event-card' do %>
            <div class="home-event-card-header">
              <h3 class="home-event-card-title"><%= event.title %></h3>
            </div>
            <div class="home-event-card-body">
              <div class="home-event-card-info">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                <span class="home-event-card-date"><%= event.formatted_date %></span>
              </div>
              <div class="home-event-card-info">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
                <span class="home-event-card-location"><%= event.location %></span>
              </div>
              <% if event.description.present? %>
                <p class="home-event-card-description"><%= truncate(event.description, length: 100) %></p>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="home-event-card home-event-card-static">
            <div class="home-event-card-header">
              <h3 class="home-event-card-title"><%= event.title %></h3>
            </div>
            <div class="home-event-card-body">
              <div class="home-event-card-info">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                <span class="home-event-card-date"><%= event.formatted_date %></span>
              </div>
              <div class="home-event-card-info">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
                <span class="home-event-card-location"><%= event.location %></span>
              </div>
              <% if event.description.present? %>
                <p class="home-event-card-description"><%= truncate(event.description, length: 100) %></p>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="home-events-empty">
      <p>No upcoming events scheduled.</p>
    </div>
  <% end %>
</div>
