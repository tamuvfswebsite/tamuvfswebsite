<% content_for :title, "Welcome" %>

<div class="home-page">
  <div class="hero-section">
    <h1>Welcome to User Management System</h1>
    <p class="hero-subtitle">Manage users and roles with Google OAuth authentication</p>
  </div>

  <div class="status-section">
    <div class="status-card">
      <h2>Authentication Status</h2>
      <% if admin_signed_in? %>
        <div class="status-info logged-in">
          <div class="status-icon">✓</div>
          <div class="status-details">
            <h3>Logged In</h3>
            <p>Welcome back, <%= current_admin.full_name || current_admin.email %></p>
            <p class="status-meta">Signed in with Google OAuth</p>
          </div>
        </div>
      <% else %>
        <div class="status-info logged-out">
          <div class="status-icon">⚠</div>
          <div class="status-details">
            <h3>Not Logged In</h3>
            <p>Please sign in to access user management features</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="navigation-section">
    <h2>Available Features</h2>
    <div class="feature-cards">
      <% if admin_signed_in? %>
        <div class="feature-card">
          <h3>User Management</h3>
          <p>View and manage user roles and permissions</p>
          <%= link_to "Manage Users", users_path, class: "btn btn-primary" %>
        </div>

        <div class="feature-card">
          <h3>Account</h3>
          <p>Sign out of your current session</p>
          <%= link_to "Sign Out", destroy_admin_session_path,
                      method: :delete,
                      class: "btn btn-outline",
                      data: { turbo_confirm: "Are you sure you want to sign out?" } %>
        </div>
      <% else %>
        <div class="feature-card">
          <h3>Sign In</h3>
          <p>Sign in with your Google account to access features</p>
          <%= link_to "Sign In with Google", new_admin_session_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>